{
  "name": "@schepta/core",
  "version": "0.1.0",
  "description": "Core agnostic rendering engine",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/guynikan/schepta.git",
    "directory": "packages/core"
  },
  "license": "MIT",
  "keywords": [
    "schepta",
    "rendering",
    "schema",
    "forms",
    "framework-agnostic",
    "server-driven-ui"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "type-check": "tsc --noEmit --project tsconfig.build.json",
    "test": "vitest run",
    "test:watch": "vitest",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "ajv": "^8.17.1",
    "ajv-errors": "^3.0.0",
    "jexl": "2.3.0"
  },
  "devDependencies": {
    "@types/jexl": "2.3.4",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vitest": "^1.0.0"
  }
}
