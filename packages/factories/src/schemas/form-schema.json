                },
                {
                  "$ref": "#/$defs/InputTextarea"
                },
                {
                  "$ref": "#/$defs/InputNumber"
                }
              ]
            }
          },
          "additionalProperties": false
        },
        "x-component-props": {
          "title": "FormFieldComponentProps",
          "type": "object",
          "additionalProperties": true
        }
      },
      "additionalProperties": false
    },
