{
  "name": "@spectra/factory-react",
  "version": "0.1.0",
  "description": "React factories for Spectra",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/guynikan/spectra.git",
    "directory": "packages/factories/react"
  },
  "license": "MIT",
  "keywords": [
    "spectra",
    "react",
    "rendering",
    "schema",
    "forms",
    "react-hook-form",
    "server-driven-ui"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@spectra/core": "workspace:*",
    "@spectra/adapter-react": "workspace:*"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0",
    "react-hook-form": "^7.52.2"
  },
  "devDependencies": {
    "@types/react": "^18.2.47",
    "@types/react-dom": "^18.2.18",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3"
  }
}

