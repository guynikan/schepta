{
  "name": "@spectra/adapter-vanilla",
  "version": "0.1.0",
  "description": "Vanilla JavaScript adapter for Spectra",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/guynikan/spectra.git",
    "directory": "packages/adapters/vanilla"
  },
  "license": "MIT",
  "keywords": [
    "spectra",
    "vanilla",
    "javascript",
    "adapter",
    "rendering",
    "server-driven-ui"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@spectra/core": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3"
  }
}

