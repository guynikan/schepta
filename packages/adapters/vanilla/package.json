{
  "name": "@schepta/adapter-vanilla",
  "version": "0.1.0",
  "description": "Vanilla JavaScript adapter for schepta",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/guynikan/schepta.git",
    "directory": "packages/adapters/vanilla"
  },
  "license": "MIT",
  "keywords": [
    "schepta",
    "vanilla",
    "javascript",
    "adapter",
    "rendering",
    "server-driven-ui"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@schepta/core": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "jsdom": "^23.0.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vitest": "^1.0.0"
  }
}

